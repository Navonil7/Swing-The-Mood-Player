<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    tools:context="com.example.neel.swing.Happy">



    <Button
        android:id="@+id/happy_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/happy_article"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:onClick="happyVideo"
        android:text="Videos"

         />

    <Button
        android:id="@+id/happy_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/happy_video"
        android:layout_marginTop="104dp"
        android:onClick="happyArticle"
        android:text="Articles" />

    <Button
        android:id="@+id/happy_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/happy_video"
        android:layout_below="@+id/happy_video"
        android:layout_marginTop="58dp"
        android:onClick="happySongs"
        android:text="Songs" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="We have detected you are Happy"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />



</RelativeLayout>
